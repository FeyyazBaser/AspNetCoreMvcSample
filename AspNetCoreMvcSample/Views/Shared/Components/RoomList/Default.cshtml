@using AspNetCoreMvcSample.Models;

@model RoomViewModel

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container col-md-5">
    <h1 style="color:seagreen ;text-align:center;padding-top:30px">Müsait Odalar</h1>
    @foreach (var item in Model.Rooms)
    {
        <div class="mt-5">
            <h2 style="color:brown">@item.Description</h2>
            <img src=@item.ImageUrl width="605" class="rounded-3">
            <br />
            <a class="btn btn-warning mt-3 w-100" asp-action="Detail">Oda Detayları</a>
            <br />
            <a class="btn btn-success mt-3 w-100" asp-action="Book">Rezervasyon Yap</a>
        </div>
    }

</div>


